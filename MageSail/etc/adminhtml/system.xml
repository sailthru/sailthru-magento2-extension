<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>


        <tab id="sailthru" translate="label" sortOrder="300">
            <label>Sailthru</label>
        </tab>



        <section id="magesail_config" translate="label" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Setup</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>

            <group id="service" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru API Setup</label>
                <field id="magesail_on" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                </field>                
                <field id="secret_key" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secret Key</label>
                </field>
               <field id="valid_keys" translate="button_label"  sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label/>
                    <frontend_model>Sailthru\MageSail\Block\System\Config\Button\Check</frontend_model>
                    <comment><![CDATA[After saving valid credentials, other settings will be accesible.]]></comment>
                </field>
            </group>
        </section>

        <section id="lists_config" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>sailthru</tab>
            <label>Lists</label>
            <resource>Sailthru_Magesail::config</resource>
            
            <group id="lists" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Lists</label>
                <field id="enable_signup_list" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Add new registering customers to Sailthru list</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                    <comment>Upon registration, set users to be added to a Sailthru list of your choice.</comment>
                </field>
                 <field id="signup_list" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer Sign-Up List</label>
                    <source_model>Sailthru\MageSail\Model\Config\Source\Sailthrulists</source_model>
                    <tooltip><![CDATA[New a new list? Check my.sailthru.com to create it!]]></tooltip>
                    <comment>Select the Sailthru list where newly registered customers will be added.</comment>
                    <depends>
                        <field id="*/*/enable_signup_list">1</field>
                    </depends>
                </field>
                <field id="enable_newsletter" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Override Default Magento Newsletter Subscribe</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                    <comment>Override Magento's default Newsletter system and add users instead to a Sailthru List</comment>
                </field>
               <field id="newsletter_list" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Newsletter List</label>
                    <source_model>Sailthru\MageSail\Model\Config\Source\Sailthrulists</source_model>
                    <tooltip><![CDATA[New a new list? Check my.sailthru.com to create it!]]></tooltip>
                    <depends>
                        <field id="*/*/enable_newsletter">1</field>
                    </depends>
                </field>
            </group>
        </section>

        <section id="sailthru_transactionals" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Transactionals</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>

            <group id="magesail_transactional" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru Transactionals</label>
                <field id="magesail_transactional_shipping" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shipping</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="sailthru_api/magesail_api/valid_keys">1</field>
                    </depends>
                </field>
                <field id="magesail_transactional_purchase" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Purchases</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="sailthru_api/magesail_api/valid_keys">1</field>
                    </depends>
                </field>
                <field id="magesail_transactional_signup" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Signups</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="sailthru_api/magesail_api/valid_keys">1</field>
                    </depends>
                </field>
                <field id="helptext">
                    <comment>Please enter valid Sailthru credentials to access settings.</comment>
                    <depends>
                        <field id="sailthru_api/magesail_api/valid_keys">0</field>
                    </depends>
                </field>
            </group>

            <group id="magesail_abandoned_cart" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru Abandoned Cart</label>
                <field id="magesail_abandoned_on" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Abandoned Cart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>                
                <field id="magesail_abandoned_template" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Abandoned Cart Template</label>
                </field>
                <field id="magesail_abandoned_time" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Abandoned Cart Send Time</label>
                    <tooltip>e.g. 5 minutes, 1 hour, 1 day</tooltip>
                    <comment>Amount of time after updating a non-empty cart that Sailthru should send the customer an email</comment>
                </field>
            </group>
        </section>
        <section id="sailthru_pm" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Personalization Manager</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>
            <group id="magesail_pm" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Personalization Manager Setup</label>
                <field id="magesail_on" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable PersonalizeJS</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="sailthru_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Horizon Domain</label>
                </field>                
            </group>
        </section>
    </system>
</config>