            <group id="magesail_api" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru API Setup</label>
                <field id="magesail_on" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sailthru_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                </field>                
                <field id="sailthru_private" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private Key</label>
                </field>
            </group>
        </section>


        <section id="sailthru_transactionals" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Transactionals</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>
            <group id="magesail_transactional" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru Transactionals</label>
                <field id="magesail_transactional_shipping" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shipping</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="magesail_transactional_purchase" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Purchases</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="magesail_transactional_signup" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Signups</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="magesail_abandoned_cart" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sailthru Abandoned Cart</label>
                <field id="magesail_abandoned_on" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Abandoned Cart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>                
                <field id="magesail_abandoned_template" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Abandoned Cart Template</label>
                </field>
                <field id="magesail_abandoned_time" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Abandoned Cart Send Time</label>
                    <tooltip>e.g. 5 minutes, 1 hour, 1 day</tooltip>
                    <comment>Amount of time after updating a non-empty cart that Sailthru should send the customer an email</comment>
                </field>
            </group>
        </section>
        <section id="sailthru_pm" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Personalization Manager</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>
            <group id="magesail_pm" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Personalization Manager Setup</label>
                <field id="magesail_on" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable PersonalizeJS</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="sailthru_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Horizon Domain</label>
                </field>                
            </group>
        </section>

        <section id="sailthru_verify" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Verify</label>
            <tab>sailthru</tab>
            <resource>Sailthru_Magesail::config</resource>
            <group id="apioptions" translate="label comment" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>API Access details</label>
                <field id="api_key" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>API Key</label>
                    <comment><![CDATA[This is the  API key]]></comment>
                </field>
                <field id="check" translate="button_label"  sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label/>
                    <attribute type="api_key_id">config_apioptions_api_key</attribute>                 
                    <attribute type="load_config_url"><![CDATA[magesail/apicontrol/loadconfig]]></attribute>
                    <button_label>Check and load current settings.</button_label>
                    <button_url>
                        <![CDATA[magesail/apicontrol/check]]>
                    </button_url>
                    <frontend_model>Sailthru\MageSail\Block\System\Config\Button\Check</frontend_model>
                    <comment><![CDATA[Once you check you API access, please click Save Setting for begin use extension.]]></comment>
                </field>
            </group>       
           
        </section>





    </system>
</config>