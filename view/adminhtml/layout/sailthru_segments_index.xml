<?xml version="1.0" ?>
<page layout="admin-1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceContainer name="page.messages">
	        <block class="Magento\Framework\View\Element\Template" name="ajax.message.placeholder" template="Magento_Theme::html/messages.phtml"/>
	        <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages" template="Magento_Theme::messages.phtml"/>
		</referenceContainer>
        <referenceContainer name="content">
            <block class="Sailthru\MageSail\Block\Adminhtml\Segments\Index" name="segments.index" template="Sailthru_MageSail::segments/index.phtml"/>
        </referenceContainer>
    </body>
</page>
